{
  "languageOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "globals": {
      "window": "readonly",
      "document": "readonly",
      "localStorage": "readonly",
      "console": "readonly",
      "navigator": "readonly",
      "URL": "readonly",
      "Blob": "readonly"
    }
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "semi": ["error", "always"]
  }
}
